    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="110dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="54dp"
        android:text="Music"
        android:textSize="50dp"
        android:textColor="#FDFDFD"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"

        android:layout_marginLeft="220dp"
        android:layout_marginTop="229dp"
        android:rotationX="-4"
        app:srcCompat="@drawable/ic_baseline_play_arrow_24" />

    <ImageButton
        android:id="@+id/dung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"

        android:layout_marginLeft="140dp"
        android:layout_marginTop="229dp"

        app:srcCompat="@drawable/ic_baseline_stop_circle_24" />

    <ImageButton
        android:id="@+id/toi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="229dp"
        app:srcCompat="@drawable/ic_outline_fast_forward_24" />

    <ImageButton
        android:id="@+id/lui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="229dp"
        app:srcCompat="@drawable/ic_baseline_fast_rewind_24" />

    <ProgressBar
        android:id="@+id/simpleProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="180dp"
        android:background="#F8F1F1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:progress="70"
        android:max="100" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="160dp"
        app:srcCompat="@drawable/ic_baseline_volume_down_24" />

